
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow any authenticated user to read content
    match /content/{contentId} {
      allow read: if request.auth != null;
      // Write access is more restrictive
      allow write: if request.auth != null;
    }

    // Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for subcollections within a user's document
    match /users/{userId}/{allSubcollections=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to check claimed IDs
    match /claimedStudentIds/{studentId} {
        allow read: if request.auth != null;
        // Only allow creation, not updates or deletes by clients
        allow create: if request.auth != null;
        allow update, delete: if false;
    }

    // Allow admins to read/list audit logs, but only server can write
    match /auditLogs/{logId} {
        allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles[0].role == 'superAdmin';
        allow write: if false;
    }

    // Allow users to read/write their own exam results
    match /examResults/{resultId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // --- Community Feature Rules ---
    match /channels/{channelId} {
        // Anyone authenticated can see public channels, but only members can see private/level channels
        allow read: if request.auth != null && (resource.data.type == 'public' || request.auth.uid in resource.data.members);
        // Only members can update channel details (like last message), only admins can change settings
        allow update: if request.auth != null && request.auth.uid in resource.data.members;
        // Allow any authenticated user to create a channel (can be restricted later)
        allow create: if request.auth != null;
    }
    
    match /channels/{channelId}/messages/{messageId} {
        // A user can read a message if they are a member of the channel it belongs to
        allow read: if request.auth != null && get(/databases/$(database)/documents/channels/$(resource.data.channelId)).data.members.hasAny([request.auth.uid]);
        // A user can create a message if they are the sender and are a member of the channel
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid && get(/databases/$(database)/documents/channels/$(request.resource.data.channelId)).data.members.hasAny([request.auth.uid]);
        // Messages are immutable
        allow update, delete: if false;
    }

    match /directMessages/{chatId} {
        // You can only interact with a chat if you are one of the participants
        allow read, write: if request.auth != null && request.auth.uid in resource.data.participants;
        allow create: if request.auth != null && request.auth.uid in request.resource.data.participants;
    }

    match /directMessages/{chatId}/messages/{messageId} {
        // You can read/write messages in a chat you are part of
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/directMessages/$(chatId)).data.participants.hasAny([request.auth.uid]);
    }
    
    match /duels/{duelId} {
      // Players can read/write to the duel they are in.
      // Anyone authenticated can read to see duel status for matchmaking.
      allow read: if request.auth != null;
      allow write: if request.auth != null && (request.auth.uid == resource.data.playerOneId || request.auth.uid == resource.data.playerTwoId);
    }
    
    // --- FaceSphere (Posts, Comments, Reactions) Rules ---
    match /posts/{postId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow update: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    match /posts/{postId}/comments/{commentId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    match /reactions/{reactionId} {
        allow read: if request.auth != null;
        allow create, update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
