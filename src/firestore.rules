
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow any authenticated user to read content
    match /content/{contentId} {
      allow read: if request.auth != null;
      // Write access is more restrictive
      allow write: if request.auth != null;
    }

    // Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow any authenticated user to read public profiles
      allow get: if request.auth != null;
    }

    // Rules for subcollections within a user's document
    match /users/{userId}/{allSubcollections=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to check claimed IDs
    match /claimedStudentIds/{studentId} {
        allow read: if request.auth != null;
        // Only allow creation, not updates or deletes by clients
        allow create: if request.auth != null;
        allow update, delete: if false;
    }

    // Allow admins to read/list audit logs, but only server can write
    match /auditLogs/{logId} {
        allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles[0].role == 'superAdmin';
        allow write: if false;
    }

    // Allow users to read/write their own exam results
    match /examResults/{resultId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // --- Community Feature Rules ---
    match /channels/{channelId} {
        // Anyone authenticated can list and read public channels
        // Members can read private/level channels
        allow list, read: if request.auth != null && (resource.data.type == 'public' || request.auth.uid in resource.data.members);
        // Only members or admins can update channel details (like last message, or adding members)
        allow update: if request.auth != null && (request.auth.uid in resource.data.admins || request.auth.uid in resource.data.members);
        // Allow any authenticated user to create a channel (can be restricted later)
        allow create: if request.auth != null;
    }
    
    match /channels/{channelId}/messages/{messageId} {
        // A user can read a message if they are a member of the channel it belongs to
        allow read: if request.auth != null && exists(/databases/$(database)/documents/channels/$(channelId)) && request.auth.uid in get(/databases/$(database)/documents/channels/$(channelId)).data.members;
        // A user can create a message if they are the sender and are a member of the channel
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid && exists(/databases/$(database)/documents/channels/$(request.resource.data.channelId)) && request.auth.uid in get(/databases/$(database)/documents/channels/$(request.resource.data.channelId)).data.members;
        // Messages are immutable by clients
        allow update, delete: if false;
    }

    match /directMessages/{chatId} {
        // Allow listing/querying chats where the current user is a participant
        allow list: if request.auth != null && request.auth.uid in request.query.where.participants;
        // Allow reading/writing to a chat document only if the user is a participant
        allow get, write: if request.auth != null && resource.data.participants.hasAny([request.auth.uid]);
        allow create: if request.auth != null && request.auth.uid in request.resource.data.participants;
    }

    match /directMessages/{chatId}/messages/{messageId} {
        // You can read/write messages in a chat you are part of
        allow read, write: if request.auth != null && (request.auth.uid in get(/databases/$(database)/documents/directMessages/$(chatId)).data.participants);
    }
    
    match /duels/{duelId} {
      // Players can read/write to the duel they are in.
      // Anyone authenticated can read to see duel status for matchmaking.
      allow read: if request.auth != null;
      allow write: if request.auth != null && (request.auth.uid == resource.data.playerOneId || request.auth.uid == resource.data.playerTwoId);
    }
  }
}
